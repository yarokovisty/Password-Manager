<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_horizontal_item"
    android:layout_marginVertical="@dimen/margin_vertical_item"
    app:cardBackgroundColor="@color/forth"
    app:cardCornerRadius="@dimen/corner_radius_item"
    app:contentPadding="@dimen/padding_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconSite"
            android:layout_width="@dimen/size_icon_site"
            android:layout_height="@dimen/size_icon_site"
            android:importantForAccessibility="no"
            android:src="@drawable/icon_img" />

        <TextView
            android:id="@+id/tvNameSite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_start_text_item"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_item"
            tools:text="VK" />
    </LinearLayout>

</androidx.cardview.widget.CardView>